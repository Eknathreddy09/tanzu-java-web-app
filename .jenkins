pipeline {
  agent any

  stages {
    stage('Checkout code') {
      steps {
        script {
          sourceUrl = "https://github.com/Eknathreddy09/tanzu-java-web-app"
          echo "$sourceUrl"
          indexSlash = sourceUrl.indexOf("/")
          echo "$indexSlash"
          revision = sourceUrl.substring(indexSlash + 1)
          echo "$revision"
        }
        sh "git clone $sourceUrl target"
        dir("target") {
          sh "git checkout ${revision}"
        }
      }
    }

    stage('Maven test') {
      steps {
        container('maven') {
          dir("target") {
            // Example tests with maven
            sh "mvn clean test --no-transfer-progress"
          }
        }
      }
    }
  }
}
