#!/bin/env groovy

pipeline {
  agent any

  stages {
    stage('Checkout code') {
      steps {
        script {
          sourceUrl = https://github.com/Eknathreddy09/tanzu-java-web-app
          indexSlash = sourceUrl.indexOf("/")
          revision = main
        }
        sh "git clone ${params.GIT-URL} target"
        dir("target") {
          sh "git checkout ${revision}"
        }
      }
    }

    stage('Maven test') {
      steps {
        container('maven') {
          dir("target") {
            // Example tests with maven
            sh "mvn clean test --no-transfer-progress"
          }
        }
      }
    }
  }
}
